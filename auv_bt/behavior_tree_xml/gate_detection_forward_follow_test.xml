<?xml version="1.0"?>
<root main_tree_to_execute="BehaviorTree">
    <!-- ////////// -->
    <BehaviorTree ID="BehaviorTree">
        <SequenceStar>
            <SubTree ID="disarm auv"/>
            <Action ID="SetLEDColor" color="#ff0000" num="0"/>
            <SubTree ID="calibrate depth sensor"/>
            <Action ID="SetLEDColor" color="#00ff22" num="0"/>
            <SubTree ID="arm_auv"/>
            <Condition ID="Elapsed" seconds="10"/>
            <Action ID="Descend" target_depth="-0.4"/>
            <Condition ID="Gate" horizontal_error="0" num="{led_num}" target_size="0.2"/>
            <Action ID="SetLEDColor" color="#0000ff" num="{led_num}"/>
            <Parallel failure_threshold="2" success_threshold="1">
                <Condition ID="Gate" horizontal_error="{h_error}" num="{led_num}" target_size="0.8"/>
                <Parallel failure_threshold="2" success_threshold="2">
                    <Action ID="FollowGate" error_threshold="20" forward_speed="0.5" horizontal_error="{h_error}" turn_speed="0.5"/>
                    <Action ID="SetLEDColor" color="#ffffff" num="{led_num}"/>
                </Parallel>
            </Parallel>
            <Parallel failure_threshold="2" success_threshold="1">
                <Condition ID="Elapsed" seconds="10"/>
                <Action ID="Forward" speed="0.5"/>
            </Parallel>
            <Parallel failure_threshold="2" success_threshold="1">
                <Condition ID="Gate" horizontal_error="0" num="1" target_size="0.25"/>
                <Action ID="Turn" speed="1"/>
            </Parallel>
            <Parallel failure_threshold="2" success_threshold="1">
                <Condition ID="Gate" horizontal_error="{h_error}" num="{led_num}" target_size="0.8"/>
                <Parallel failure_threshold="2" success_threshold="2">
                    <Action ID="FollowGate" error_threshold="20" forward_speed="0.5" horizontal_error="{h_error}" turn_speed="0.5"/>
                    <Action ID="SetLEDColor" color="#ffffff" num="{led_num}"/>
                </Parallel>
            </Parallel>
            <Parallel failure_threshold="2" success_threshold="1">
                <Condition ID="Elapsed" seconds="10"/>
                <Action ID="Forward" speed="0.5"/>
            </Parallel>
            <Action ID="Descend" target_depth="-0.0"/>
            <SubTree ID="disarm  auv"/>
        </SequenceStar>
    </BehaviorTree>
    <!-- ////////// -->
    <BehaviorTree ID="arm_auv">
        <ReactiveFallback>
            <Condition ID="IsArmed"/>
            <Action ID="SetMode" arm="true"/>
        </ReactiveFallback>
    </BehaviorTree>
    <!-- ////////// -->
    <BehaviorTree ID="calibrate depth sensor">
        <ReactiveFallback>
            <Condition ID="IsDepthCalibrated" depth_threshold="0.01"/>
            <Action ID="CalibrateDepth"/>
        </ReactiveFallback>
    </BehaviorTree>
    <!-- ////////// -->
    <BehaviorTree ID="disarm  auv">
        <ReactiveFallback>
            <Inverter>
                <Condition ID="IsArmed"/>
            </Inverter>
            <Action ID="SetMode" arm="false"/>
        </ReactiveFallback>
    </BehaviorTree>
    <!-- ////////// -->
    <BehaviorTree ID="disarm auv">
        <ReactiveFallback>
            <Inverter>
                <Condition ID="IsArmed"/>
            </Inverter>
            <Action ID="SetMode" arm="false"/>
        </ReactiveFallback>
    </BehaviorTree>
    <!-- ////////// -->
    <BehaviorTree ID="forward with progress">
        <Parallel failure_threshold="2" success_threshold="2">
            <Action ID="Forward" speed="0.5"/>
            <Action ID="SetLEDColor" color="#ffffff" num="{led_num}"/>
        </Parallel>
    </BehaviorTree>
    <!-- ////////// -->
    <TreeNodesModel>
        <Action ID="CalibrateDepth"/>
        <Action ID="Descend">
            <input_port default="-0.0" name="target_depth">Depth to descend to</input_port>
        </Action>
        <Condition ID="Elapsed">
            <input_port default="1" name="seconds">time to wait</input_port>
        </Condition>
        <Action ID="FollowGate">
            <input_port default="20" name="error_threshold">error threshold</input_port>
            <input_port default="0.5" name="forward_speed">linear y velocity</input_port>
            <input_port default="0" name="horizontal_error">gate horizontal error</input_port>
            <input_port default="0.5" name="turn_speed">angular z velocity</input_port>
        </Action>
        <Action ID="Forward">
            <input_port default="0.5" name="speed">linear z velocity</input_port>
        </Action>
        <Condition ID="Gate">
            <output_port default="0" name="horizontal_error">difference between gate detection from center of the screen</output_port>
            <output_port default="1" name="num">number of LEDs to turn on</output_port>
            <input_port default="0.5" name="target_size">the size of the detected gate</input_port>
        </Condition>
        <Condition ID="IsArmed"/>
        <Condition ID="IsDepthCalibrated">
            <input_port default="0.0" name="depth_threshold">error_tolerance for current depth value</input_port>
        </Condition>
        <Action ID="SetLEDColor">
            <input_port default="#ffffff" name="color">Neopixel color to set</input_port>
            <input_port default="0" name="num">number of pixels to turn on</input_port>
        </Action>
        <Action ID="SetMode">
            <input_port default="false" name="arm">arm the robot?</input_port>
        </Action>
        <Action ID="Turn">
            <input_port default="0.5" name="speed">angular z velocity</input_port>
        </Action>
        <SubTree ID="arm_auv"/>
        <SubTree ID="calibrate depth sensor"/>
        <SubTree ID="disarm  auv"/>
        <SubTree ID="disarm auv"/>
        <SubTree ID="forward with progress"/>
    </TreeNodesModel>
    <!-- ////////// -->
</root>
