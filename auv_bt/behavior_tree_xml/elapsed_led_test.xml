<?xml version="1.0"?>
<root main_tree_to_execute="BehaviorTree">
    <!-- ////////// -->
    <BehaviorTree ID="BehaviorTree">
        <SequenceStar>
            <Condition ID="Elapsed" seconds="15"/>
            <Action ID="SetLEDColor" color="#ffffff" num="0"/>
        </SequenceStar>
    </BehaviorTree>
    <!-- ////////// -->
    <TreeNodesModel>
        <Condition ID="Elapsed">
            <input_port name="seconds" type="int"/>
        </Condition>
        <Action ID="SetLEDColor">
            <input_port default="#ffffff" name="color">color of neopixel LEDs</input_port>
            <input_port default="0" name="num">number of LEDs to turn on</input_port>
        </Action>
        <Action ID="Turn">
            <input_port default="0.5" name="speed">speed at which to turn</input_port>
        </Action>
    </TreeNodesModel>
    <!-- ////////// -->
</root>
